@model ITexusTaskOne.Models.Wagon

@{
    ViewData["Title"] = "Details";
}

<h1>Подробнее</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Инвентарный номер</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InventoryNum)
        </dd>
        <dt class = "col-sm-2">Модель</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">Дата производства</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdDate)
        </dd>
        <dt class = "col-sm-2">Дата начала эксплуатации</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpDate)
        </dd>
        <dt class = "col-sm-2">Вес вагона</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WagWeight)
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-primary" type="button" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <a style="color: white; text-decoration: none;" asp-action="Edit" asp-route-id="@Model.WagonID">Редактировать</a>
    </button>

    <button class="btn btn-primary" type="button" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <a style="color: white; text-decoration: none;" asp-area="" asp-controller="Wagons" asp-action="Index">Назад</a>
    </button>
</div>
